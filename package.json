{
  "name": "notion-assignment-import",
  "repository": {
    "type": "git",
    "url": "https://github.com/JamesNZL/notion-assignment-import.git"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.179",
    "@types/node": "^17.0.17",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@notionhq/client": "^0.4.13",
    "chrono-node": "^2.3.6"
  },
  "scripts": {
    "build": "tsc & browserify dist/extension.js -o dist/bundled.js & browserify dist/parseAssignments.js -o dist/parseAssignments.js",
    "release": "standard-version --sign"
  },
  "standard-version": {
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "package-lock.json",
        "type": "json"
      },
      {
        "filename": "manifest.json",
        "type": "json"
      }
    ]
  }
}
